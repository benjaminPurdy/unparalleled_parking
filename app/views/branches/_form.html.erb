<script>
function validateForm() {
    form = document.getElementById("new_branch");
    var title = form.branch_uid.value;
    var startingRange = form.branch_text.value;
    var endingRange = form.branch_range.value;
    var errors = false;
    
    if (title=="" || startingRange=="" || endingRange=="") {
        errorSpan = document.createElement("span");   
        errorSpan.innerHTML = "Please fill out all required fields";
        document.getElementById("errors").appendChild(errorSpan);
        br = document.createElement("br");   
        document.getElementById("errors").appendChild(br);
	errors = true;
    }
    if (parseInt(startingRange) > parseInt(endingRange)) {
        errorSpan = document.createElement("span");   
        errorSpan.innerHTML = "Invalid range"
        document.getElementById("errors").appendChild(errorSpan);
        br = document.createElement("br");   
        document.getElementById("errors").appendChild(br);
	errors = true;
    }
  
    return !errors;
}
</script>
